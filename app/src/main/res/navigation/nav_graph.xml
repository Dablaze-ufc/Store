<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.irobot.myapplication.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/itemsFragment"
        android:name="com.irobot.myapplication.ui.item.ItemsFragment"
        android:label="fragment_items"
        tools:layout="@layout/fragment_items">
        <action
            android:id="@+id/action_itemsFragment_to_itemsDetailsFragment"
            app:destination="@id/itemsDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemsDetailsFragment"
        android:name="com.irobot.myapplication.itemsDetails.ItemsDetailsFragment"
        android:label="fragment_items_details"
        tools:layout="@layout/fragment_items_details" />
</navigation>